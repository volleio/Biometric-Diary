{
    "compilerOptions": {
        "target": "es2017",
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "build/",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
            ]
        }
    },
    "include": [
        "src/*",
        "src/types/*"
    ],
    "exclude": [
        "src/client"
    ]
}