<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="/stylesheets/main.css">
	<script>
		var theme = "<%= theme ? theme : '' %>";
	</script>
	<script defer src="/js/typingdna.js" type="text/javascript"></script>
	<script defer src="/js/lang.js" type="text/javascript"></script>
	<script defer src="/js/main.js" type="text/javascript"></script>
</head>

<body class="<%= theme ? theme : '' %>" >
	<div id="main-spinner" class="spinner spinner--viewport">
		<div class="spinner__line"></div>
		<div class="spinner__line"></div>
	</div>
	<div id="main-container" class="main-container">
		<div class="header">
		</div>
		<div class="login-container">
			<input type="text" id="login-input" class="login-input" tabindex="1">
			<button class="login-button primary-button" tabindex="1"></button>
			<div class="login-help">
				<div class="spinner spinner-inline login-help-spinner">
					<div class="spinner__line"></div>
					<div class="spinner__line"></div>
				</div>
				<span class="login-help-text login-help-text__1"></span>
				<span class="login-help-text login-help-text__2"></span>
				<div class="login-help-extra"></div>
			</div>
			<div class="login-auth-badge">
				<svg class="auth-update-progress-ring progress-ring" width="30" height="30">
					<circle class="progress-ring__circle" stroke="#4796F3" stroke-width="2" fill="transparent" r="13.5" cx="15" cy="15"/>
				</svg>
				<svg class="auth-match-progress-ring progress-ring" width="30" height="30">
					<circle class="progress-ring__circle" stroke="#46AB2B" stroke-width="3" fill="transparent" r="13.5" cx="15" cy="15"/>
				</svg>
				<div class="login-auth-badge__check"></div>
			</div>
			<div class="main-menu">
				<div class="menu-item">
					<div class="logout-button secondary-button"></div>
				</div>
			</div>
		</div>
		<div class="notes-container">
			<template id="note-input-template">
				<div class="note-container">
					<textarea cols="30" rows="10" class="note-input"></textarea>
					<div class="note-saving-indicator">â€¦</div>
					<div class="note-saved-indicator"></div>
					<div class="note-save-failed-indicator"></div>
				</div>
			</template>
			<div class="end-of-notes" style="visibility: hidden">
				<div class="end-of-notes__msg"></div>
			</div>
			<div class="notes-spinner spinner">
				<div class="spinner__line"></div>
				<div class="spinner__line"></div>
			</div>
		</div>
	</div>
	<div class="mobile-warning warning-container">
		<button class="warning-close"></button>
		<img class="mobile-warning__image" src="/images/MobileFrowny.svg"/>
		<div class="mobile-warning__body"></div>
	</div>
</body>
</html>
