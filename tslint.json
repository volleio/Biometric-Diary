{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-airbnb"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": true,
        "no-console": false,
        "indent": true,
        "curly": false,
        "no-trailing-whitespace": false,
        "one-line": false,
        "align": false,
        "ter-indent": [true, "tab", 1],
        "brace-style": [
            true,
            "allman",
            {
              "allowSingleLine": true
            }
        ]
    },
    "rulesDirectory": []
}