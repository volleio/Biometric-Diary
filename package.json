{
	"name": "biometric-diary",
	"version": "0.0.0",
	"description": "A note taking app secured with biometric typing authentication.",
	"engines": {
		"node": "8.9.1"
	},
	"main": "index.js",
	"scripts": {
		"start": "node build/server/index.js",
		"watch": "watch \"npm run start\" build/server",
		"build": "npm run compile-ts-server && npm run compile-ts-client && npm run compile-sass && npm run copy-assets",
		"compile-ts-server": "tslint -p tsconfig.server.json && tsc -p tsconfig.server.json",
		"compile-ts-client": "tslint -p tsconfig.client.json && tsc -p tsconfig.client.json",
		"compile-sass": "node-sass src/server/stylesheets/ -o build/server/stylesheets/",
		"copy-assets": "cpx \"src/**/*.{ejs,svg,ico,env}\" ./build",
		"test": "concurrently \"npm:compile-ts-server-w\" \"npm:compile-ts-client-w\" \"npm:compile-sass-w\" \"npm:copy-assets-w\"",
		"compile-ts-server-w": "tsc -w -p tsconfig.server.json",
		"compile-ts-client-w": "tsc -w -p tsconfig.client.json",
		"compile-sass-w": "node-sass src/server/stylesheets/ -o build/server/stylesheets/ && node-sass -r -w src/server/stylesheets/ -o build/server/stylesheets/",
		"copy-assets-w": "cpx \"src/**/*.{ejs,svg,ico,env}\" ./build -w",
		"heroku-postbuild": "npm run build"
	},
	"dependencies": {
		"cpx": "^1.5.0",
		"dotenv": "^6.0.0",
		"dtsmake": "0.0.10",
		"ejs": "^2.5.6",
		"express": "^4.15.2",
		"node-sass": "^4.9.3",
		"serve-favicon": "^2.5.0",
		"typingdnaclient": "^1.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/volleio/Biometric-Diary"
	},
	"keywords": [
		"node",
		"heroku",
		"express"
	],
	"license": "MIT",
	"devDependencies": {
		"@types/dotenv": "^4.0.3",
		"@types/express": "^4.16.0",
		"@types/node": "^10.9.4",
		"@types/serve-favicon": "^2.2.30",
		"concurrently": "^4.0.1",
		"tslint": "^5.11.0",
		"typescript": "^3.0.3",
		"watch": "^1.0.2"
	}
}
