{
	"name": "biometric-diary",
	"version": "0.0.0",
	"description": "A note taking app secured with biometric typing authentication.",
	"engines": {
		"node": "8.9.1"
	},
	"main": "index.js",
	"scripts": {
		"start": "node dist/index.js",
		"build": "tslint -p tsconfig.json && tsc && npm run compile-sass && npm run copy-assets",
		"compile-sass": "node-sass src/stylesheets/ -o dist/stylesheets/",
		"copy-assets": "cpx \"src/**/*.{ejs,svg,ico,env}\" ./dist",
		"test": "concurrently \"tsc -w\" \"compile-sass-w\" \"npm:copy-assets-w\"",
		"compile-sass-w": "node-sass src/stylesheets/ -o dist/stylesheets/ -w",
		"copy-assets-w": "cpx \"src/**/*.{ejs,svg,ico,env}\" ./dist -w"
	},
	"dependencies": {
		"cpx": "^1.5.0",
		"dotenv": "^6.0.0",
		"ejs": "^2.5.6",
		"express": "^4.15.2",
		"node-sass": "^4.9.3",
		"serve-favicon": "^2.5.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/volleio/Biometric-Diary"
	},
	"keywords": [
		"node",
		"heroku",
		"express"
	],
	"license": "MIT",
	"devDependencies": {
		"@types/dotenv": "^4.0.3",
		"@types/express": "^4.16.0",
		"@types/node": "^10.9.4",
		"@types/serve-favicon": "^2.2.30",
		"concurrently": "^4.0.1",
		"tslint": "^5.11.0",
		"typescript": "^3.0.3"
	}
}
