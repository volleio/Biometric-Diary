{
    "compilerOptions": {
        "target": "ES6",
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/*"
    ]
}